pipeline {}
     agent any
 
 stages {
        stage('Cloning Git') {
            steps {
               
                git branch: 'main', url: 'https://gitlab.com/ponsun2024/san-frontend-jenkins.git'
            }
        }
        stage('Building image') {
            steps {
                script {
                     {
                    dir('san-frontend') {
                        bat 'docker build -t "san-frontend" .'
                    }
                }
            }
        stage('Running image') {
            steps {
                script {
                    bat 'docker run -d -p 8081:80 san-frontend'
                }
            }
        }