pipeline {
    agent any

    stages {
        stage('Cloning Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Anusekar-DevOps/san-frontend-jenkins.git'
            }
        }

        stage('Building image') {
            steps {
                script {
                    sh '''
                    docker build -t san-frontend .
                    '''
                }
            }
        }

        stage('Running image') {
            steps {
                script {
                    sh '''
                    docker run -d -p 8081:80 san-frontend
                    '''
                }
            }
        }
    }
}
